apiVersion: machineconfiguration.openshift.io/v1
kind: MachineConfig
metadata:
  labels:
    machineconfiguration.openshift.io/role: master
  name: 99-node-sizing-for-crc
spec:
  config:
    ignition:
      version: 3.2.0
    storage:
      files:
      - contents:
          source: data:text/plain;charset=utf-8;base64,${DYNAMIC_DATA}
        overwrite: true
        mode: 0420
        path: /etc/node-sizing-enabled.env
